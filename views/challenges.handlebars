  </table>







<script>
var current = document.getElementById("currentChallenge");
var jogging = document.getElementById('Rjogging');
var jogTime = document.getElementById("Tjogging");
var meditation = document.getElementById('Rmeditate');
var medTime = document.getElementById("Tmeditate");
var sleep = document.getElementById('Rsleep');
var sleepTime = document.getElementById("Tsleep");
var defaultText = "Current Challenge: ";
var submit = function(){

if(jogging.checked){
  current.innerHTML = defaultText + "Jog for " + jogTime.value + " minutes!";
}
else if(meditation.checked){
    current.innerHTML = defaultText + "Meditate for " + medTime.value + " minutes!";
}
else if(sleep.checked){
    current.innerHTML = defaultText + "Sleep for " + sleepTime.value + " hours!";
}

// current.innerHTML="N/A";
}


</script>
</body>

</html>
