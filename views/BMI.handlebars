  <script>
  var bmi = function(){
  var userWeight = document.getElementById("userWeight");
  var userHeight = document.getElementById("userHeight");
  var results = document.getElementById("result");
  var weight = userWeight.value;
  var height = userHeight.value;
  if( height > 100){
    height = height / 100;
  }
  var bmi = parseFloat(weight / (height * height));

  var range = "";


  if(bmi < 16){
    range = "Severe Thinness";
  }
  else if(bmi >= 16 && bmi <= 17){
  range = "Moderate Thinness";
  }
  else if(bmi >= 17 && bmi <= 18.5){
    range = "Underweight";
  }
  else if(bmi >= 18.5 && bmi <= 25){
    range = "Obese";
  }
  results.innerHTML = bmi.toFixed(1) + " - " + range;
}

  </script>
</body>

